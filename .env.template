# KASA Camera Configuration Template
# Copy this file to .env and fill in your camera details

# Camera 1 Settings
CAM1_IP=192.168.1.XXX
CAM1_USER=your_camera_username
CAM1_PASS=your_camera_password

# Camera 2 Settings  
CAM2_IP=192.168.1.XXX
CAM2_USER=your_camera_username
CAM2_PASS=your_camera_password

# Recording Settings
SEG_SECS=3600          # Segment duration in seconds (3600 = 1 hour)
WRAP_FILES=12          # Number of recording files to keep (12 hours)
RECORD_DIR=recordings   # Directory for recorded files

# Video Quality Settings
WIDTH=1280             # Video width (0 = original size)
FPS=15                 # Frames per second for preview
MJPEG_Q=2              # MJPEG quality (1-31, lower = better)

# Recording Quality Settings
CRF=24                 # Video quality (18-28, lower = better)
PRESET=fast            # Encoding speed (ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow)
